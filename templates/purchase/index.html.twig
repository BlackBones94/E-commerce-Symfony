{% extends "base.html.twig" %}

{% block title %}
    Mes Commandes
{% endblock %}

{% block body %}
    <h1>Mes Commandes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Numéro</th>
                <th>Adresse</th>
                <th>Date de Commande</th>
                <th>Produit</th>
                <th>Total</th>
            </tr>
        </thead>

        <tbody>
            {% for p in purchase %}
                <tr>
                    <td>{{p.id}}</td>
                    <td>{{p.address}}<br>{{p.postalCode}}, {{p.city}}</td>
                    <td>{{p.purchasedAt | date('d/m/y')}}</td>
                    <td>
                        <ul>
                            {% for item in p.purchaseItems %}
                                <li>{{item.quantity}}x {{item.productName}} ({{item.productPrice / 100}} €)</li>
                            {% endfor %}
                        </ul>
                    </td>
                    <td>{{p.total / 100}} €</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}  